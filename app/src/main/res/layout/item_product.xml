<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/style"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/product_img"
            android:text="Book name"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_img"
            android:layout_below="@id/product_name"
            android:text="Book name"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:id="@+id/product_price"
            android:layout_marginLeft="5dp"/>


        <ImageView
            android:id="@+id/negative_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/product_img"
            android:src="@drawable/ic_baseline_remove_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/negative_icon"
            android:layout_below="@id/product_price"
            android:text="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:id="@+id/product_quantity"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/positive_icon"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_toRightOf="@+id/product_quantity"
            android:layout_below="@id/product_price"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/product_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/positive_icon"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/product_img"
            android:text="Book name"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnCart"
            android:layout_below="@id/product_des"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/product_img"
            android:drawableRight="@drawable/ic_baseline_shopping_cart_24"
            android:text="Add to Cart"
            android:textAllCaps="false" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>